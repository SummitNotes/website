---
import Layout from "../layouts/Layout.astro";
import { Card } from "../components/ui/card";
import Footer from "../components/Footer";
import { BookOpen, Clock, ArrowRight, Calendar, User } from "lucide-react";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const sortedPosts = posts.sort(
  (a, b) =>
    b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
);
---

<Layout
  title="Blog - Summit AI Notes"
  description="Learn about AI meeting notes, productivity tips, and privacy-focused workflows"
>
  <div
    class="min-h-screen bg-gradient-to-br from-background via-background to-muted/20"
  >
    <div class="container mx-auto px-4 py-16">
      <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-16">
          <div
            class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6"
          >
            <BookOpen class="w-8 h-8 text-purple-600" />
          </div>
          <h1 class="text-5xl font-bold text-foreground mb-4">
            Summit AI Notes Blog
          </h1>
          <p class="text-xl text-muted-foreground">
            Insights on AI, productivity, and privacy-first tools
          </p>
        </div>

        {
          sortedPosts.length > 0 ? (
            <div class="space-y-8">
              {/* Featured Post (first post) */}
              {sortedPosts.length > 0 && (
                <a
                  href={`/blog/${sortedPosts[0].slug}`}
                  class="block group"
                >
                  <Card className="overflow-hidden hover:shadow-xl transition-shadow">
                    <div class="grid md:grid-cols-2 gap-0">
                      {sortedPosts[0].data.image && (
                        <div class="aspect-video md:aspect-auto md:h-full">
                          <img
                            src={sortedPosts[0].data.image}
                            alt={sortedPosts[0].data.imageAlt || sortedPosts[0].data.title}
                            class="w-full h-full object-cover"
                          />
                        </div>
                      )}
                      <div class="p-8 flex flex-col justify-center">
                        <div class="flex items-center gap-4 text-sm text-muted-foreground mb-4">
                          <span class="flex items-center gap-1">
                            <Calendar class="w-4 h-4" />
                            {sortedPosts[0].data.publishedDate.toLocaleDateString(
                              "en-US",
                              { year: "numeric", month: "long", day: "numeric" }
                            )}
                          </span>
                          <span class="flex items-center gap-1">
                            <User class="w-4 h-4" />
                            {sortedPosts[0].data.author}
                          </span>
                        </div>
                        <h2 class="text-3xl font-bold text-foreground mb-4 group-hover:text-purple-600 transition-colors">
                          {sortedPosts[0].data.title}
                        </h2>
                        <p class="text-lg text-muted-foreground mb-6">
                          {sortedPosts[0].data.description}
                        </p>
                        {sortedPosts[0].data.tags && (
                          <div class="flex flex-wrap gap-2 mb-6">
                            {sortedPosts[0].data.tags.map((tag: string) => (
                              <span class="px-3 py-1 bg-purple-100 text-purple-700 rounded-full text-sm">
                                {tag}
                              </span>
                            ))}
                          </div>
                        )}
                        <span class="inline-flex items-center text-purple-600 font-semibold group-hover:gap-2 transition-all">
                          Read article
                          <ArrowRight class="ml-1 w-4 h-4" />
                        </span>
                      </div>
                    </div>
                  </Card>
                </a>
              )}

              {/* Other Posts Grid */}
              {sortedPosts.length > 1 && (
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                  {sortedPosts.slice(1).map((post) => (
                    <a href={`/blog/${post.slug}`} class="block group">
                      <Card className="h-full overflow-hidden hover:shadow-lg transition-shadow">
                        {post.data.image && (
                          <div class="aspect-video">
                            <img
                              src={post.data.image}
                              alt={post.data.imageAlt || post.data.title}
                              class="w-full h-full object-cover"
                            />
                          </div>
                        )}
                        <div class="p-6">
                          <div class="flex items-center gap-2 text-sm text-muted-foreground mb-3">
                            <Calendar class="w-4 h-4" />
                            {post.data.publishedDate.toLocaleDateString(
                              "en-US",
                              { year: "numeric", month: "short", day: "numeric" }
                            )}
                          </div>
                          <h3 class="text-xl font-bold text-foreground mb-3 group-hover:text-purple-600 transition-colors">
                            {post.data.title}
                          </h3>
                          <p class="text-muted-foreground mb-4 line-clamp-3">
                            {post.data.description}
                          </p>
                          <span class="inline-flex items-center text-purple-600 font-medium text-sm">
                            Read more
                            <ArrowRight class="ml-1 w-4 h-4" />
                          </span>
                        </div>
                      </Card>
                    </a>
                  ))}
                </div>
              )}
            </div>
          ) : (
            <>
              {/* Coming Soon Notice - only shown when no posts */}
              <Card className="p-12 text-center bg-gradient-to-r from-purple-50 to-blue-50 border-purple-200 mb-12">
                <h2 class="text-3xl font-bold text-foreground mb-4">
                  Blog Coming Soon
                </h2>
                <p class="text-lg text-muted-foreground mb-6">
                  We're working on creating valuable content about AI-powered
                  productivity, privacy-first workflows, and making the most of
                  meeting notes.
                </p>
                <p class="text-muted-foreground">
                  In the meantime, check out our documentation and guides to learn
                  more about Summit AI Notes.
                </p>
              </Card>
            </>
          )
        }

        <!-- Stay Updated -->
        <Card
          className="p-8 bg-gradient-to-r from-blue-50 to-purple-50 border-blue-200 text-center mt-12"
        >
          <h2 class="text-2xl font-bold text-foreground mb-4">
            Get Notified About New Posts
          </h2>
          <p class="text-muted-foreground mb-6">
            Join our mailing list to be the first to know when we publish new
            content.
          </p>
          <a
            href="/#mailing-list"
            class="inline-flex items-center justify-center px-6 py-3 bg-sky-400 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
          >
            Join Mailing List
            <ArrowRight class="ml-2 w-4 h-4" />
          </a>
        </Card>
      </div>
    </div>
  </div>
  <Footer client:load />
</Layout>

<style>
  :global(.dark) .prose {
    --tw-prose-body: var(--foreground);
    --tw-prose-headings: var(--foreground);
  }
</style>
