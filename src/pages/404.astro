<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Page not found</title>
    <meta name="robots" content="noindex" />
    <script is:inline>
      if (window.location.pathname.startsWith('/open/document/')) {
        document.title = 'Opening in Summit Notes...';
        var APP_STORE_URL = 'https://apps.apple.com/app/summit-notes/id6743597895';
        setTimeout(function () {
          window.location.href = APP_STORE_URL;
        }, 1500);
        document.addEventListener('DOMContentLoaded', function () {
          document.getElementById('deep-link').style.display = 'flex';
          document.getElementById('not-found').style.display = 'none';
        });
      }
    </script>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        margin: 0;
        background: #000;
        color: #fff;
        text-align: center;
      }
      .container { padding: 2rem; }
      h1 { font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; }
      p { color: #999; font-size: 0.9rem; }
      a { color: #58a6ff; }
      #deep-link { display: none; align-items: center; justify-content: center; min-height: 100vh; }
    </style>
  </head>
  <body>
    <div id="not-found" class="container">
      <h1>Page not found</h1>
      <p><a href="/">Go to homepage</a></p>
    </div>
    <div id="deep-link" class="container">
      <div>
        <h1>Opening in Summit Notes...</h1>
        <p>If the app doesn't open, <a href="https://apps.apple.com/app/summit-notes/id6743597895">get it on the App Store</a>.</p>
      </div>
    </div>
  </body>
</html>
