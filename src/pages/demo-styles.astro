---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer";
import { Button } from "../components/ui/button";
---

<Layout
  title="Hero Text Style Demo - Summit AI Notes"
  description="Demo page showcasing different hero text styles"
>
  <div class="min-h-screen bg-background">
    <Navigation />

    <div class="container mx-auto px-4 pt-32 pb-16">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h1 class="text-4xl font-bold text-foreground mb-4">Hero Text Style Options</h1>
          <p class="text-xl text-muted-foreground">Choose your preferred style for the hero section</p>
        </div>

        <div class="space-y-24">

          <!-- Style 1: Solid Blue -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
                Style 1: Solid Blue
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 text-blue-600">
                Confidentiality
              </span>
            </h2>
          </div>

          <!-- Style 2: Two-Tone Blue to Purple -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-purple-100 text-purple-700 rounded-full text-sm font-semibold mb-4">
                Style 2: Two-Tone Blue/Purple
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Confidentiality
              </span>
            </h2>
          </div>

          <!-- Style 3: Blue to Teal -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-teal-100 text-teal-700 rounded-full text-sm font-semibold mb-4">
                Style 3: Blue to Teal
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 bg-gradient-to-r from-blue-600 to-teal-500 bg-clip-text text-transparent">
                Confidentiality
              </span>
            </h2>
          </div>

          <!-- Style 4: Orange Accent -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-orange-100 text-orange-700 rounded-full text-sm font-semibold mb-4">
                Style 4: Blue to Orange
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 bg-gradient-to-r from-blue-600 to-orange-500 bg-clip-text text-transparent">
                Confidentiality
              </span>
            </h2>
          </div>

          <!-- Style 5: Multi-Color Wave -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-gradient-to-r from-blue-100 to-purple-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
                Style 5: Multi-Color Wave
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 bg-gradient-to-r from-blue-600 via-teal-500 via-purple-600 to-orange-500 bg-clip-text text-transparent">
                Confidentiality
              </span>
            </h2>
          </div>

          <!-- Style 6: Underline Accent -->
          <div class="border rounded-lg p-12 bg-gradient-to-br from-background to-muted/20">
            <div class="mb-6">
              <span class="inline-block px-4 py-2 bg-blue-100 text-blue-700 rounded-full text-sm font-semibold mb-4">
                Style 6: Underline Accent
              </span>
            </div>
            <h2 class="text-5xl lg:text-6xl font-bold text-foreground leading-tight">
              Meeting Notes That Respect
              <span class="block mt-2 text-foreground relative">
                Confidentiality
                <span class="absolute bottom-2 left-0 right-0 h-3 bg-gradient-to-r from-blue-500/30 via-purple-500/30 to-teal-500/30 -z-10"></span>
              </span>
            </h2>
          </div>

        </div>

        <div class="mt-16 text-center">
          <a href="/" class="inline-block">
            <Button variant="outline" size="lg">
              Back to Home
            </Button>
          </a>
        </div>
      </div>
    </div>

    <Footer client:load />
  </div>
</Layout>

<style>
  /* Ensure text rendering looks crisp */
  h2 {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
</style>
