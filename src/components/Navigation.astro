<script>
  const scrollNav = document.getElementById("scroll-nav");
  let lastScrollY = 0;
  let hasScrolled = false;

  const handleScroll = () => {
    const currentScrollY = window.scrollY;

    if (currentScrollY > 100 && !hasScrolled) {
      // User has scrolled down - show the nav
      hasScrolled = true;
      if (scrollNav) {
        scrollNav.style.opacity = "1";
        scrollNav.style.transform = "translateY(0)";
      }
    } else if (currentScrollY <= 50 && hasScrolled) {
      // User is near the top - hide the nav
      hasScrolled = false;
      if (scrollNav) {
        scrollNav.style.opacity = "0";
        scrollNav.style.transform = "translateY(-100%)";
      }
    }

    lastScrollY = currentScrollY;
  };

  // Listen for scroll
  window.addEventListener("scroll", handleScroll, { passive: true });
</script>
