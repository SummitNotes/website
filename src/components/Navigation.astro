<div
  id="scroll-nav"
  class="fixed top-0 left-0 right-0 z-50 flex justify-center sm:justify-end p-3 sm:p-4 pointer-events-none transition-all duration-300"
  style="opacity: 0; transform: translateY(-100%);"
>
  <div class="container mx-auto px-3 sm:px-4 flex justify-center sm:justify-end max-w-7xl">
    <div
      class="pointer-events-auto flex items-center gap-3 sm:gap-4 rounded-2xl bg-black/75 backdrop-blur-xl border border-white/10 px-3 py-2.5 sm:px-4 sm:py-3 shadow-2xl"
    >
      <div class="flex h-10 w-10 sm:h-12 sm:w-12 items-center justify-center flex-shrink-0">
        <img src="/logo.svg" alt="Summit AI Notes" class="w-10 h-10 sm:w-12 sm:h-12 rounded-xl" />
      </div>
      <div class="flex flex-col min-w-0">
        <span class="font-semibold text-white text-[14px] sm:text-[15px] leading-tight">Start recording</span>
        <span class="text-[12px] sm:text-[13px] text-gray-400 leading-tight">30 calls free</span>
      </div>
      <a
        href="https://apps.apple.com/app/summit-ai-notes/id6754717420"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 rounded-full bg-[#0a84ff] hover:bg-[#409cff] px-3 sm:px-4 py-2 text-sm font-semibold text-white transition-colors active:scale-95 flex-shrink-0 ml-1 sm:ml-2"
      >
        <span class="w-2 h-2 rounded-full bg-white"></span>
        <span>Download</span>
      </a>
    </div>
  </div>
</div>

<script>
  const scrollNav = document.getElementById("scroll-nav");
  let hasScrolled = false;

  const handleScroll = () => {
    const currentScrollY = window.scrollY;

    if (currentScrollY > 100 && !hasScrolled) {
      // User has scrolled down - show the nav from bottom
      hasScrolled = true;
      if (scrollNav) {
        scrollNav.style.opacity = "1";
        scrollNav.style.transform = "translateY(0)";
      }
    } else if (currentScrollY <= 50 && hasScrolled) {
      // User is near the top - hide the nav to top
      hasScrolled = false;
      if (scrollNav) {
        scrollNav.style.opacity = "0";
        scrollNav.style.transform = "translateY(-100%)";
      }
    }
  };

  // Listen for scroll
  window.addEventListener("scroll", handleScroll, { passive: true });
</script>
